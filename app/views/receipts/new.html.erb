<% provide(:title, "Create Receipt") %>
<h1>Create Receipt</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@receipt, :url => receipts_path) do |f| %>
    <%= render partial: "layouts/errors", locals: { object: @receipt } %>

      <%= f.label :amount_owed, "Total price" %>
      <%= f.number_field :amount_owed, class: 'form-control', step: :any %>

      <%= f.label :items %>
      <%= f.text_field :items, class: 'form-control' %>

      <%= f.label :patient %>
      <%= f.text_field :user_id, class: 'form-control' %>

      <%= f.submit "Create receipt", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
