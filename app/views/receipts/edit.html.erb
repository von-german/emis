<% provide(:title, "Update Receipt") %>
<h1>Update Receipt</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@receipt) do |f| %>
    <%= render partial: "layouts/errors", locals: { object: @receipt } %>

      <%= f.label :amount_owed, "Total price" %>
      <%= f.number_field :amount_owed, class: :text_field, step: :any %>

      <%= f.label :items %>
      <%= f.text_field :items, class: 'form-control' %>

      <%= f.submit "Create receipt", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
