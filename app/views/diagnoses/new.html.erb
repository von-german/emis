<% provide(:title, "Diagnosis") %>
<h1>Diagnosis</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@diagnosis, url: diagnoses_path) do |f| %>
    <%= render partial: "layouts/errors", locals: { object: @diagnosis } %>

      <%= f.label :prescription %>
      <%= f.text_field :prescription, class: 'form-control' %>

      <%= f.label :condition %>
      <%= f.text_field :condition, class: 'form-control' %>

      <%= f.label :patient %>
      <%= f.text_field :user_id, class: 'form-control' %>

      <%= f.submit "Issue diagnosis", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
