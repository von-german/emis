<% provide(:title, "Edit Diagnosis") %>
<h1>Edit Diagnosis</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @diagnosis do |f| %>
    <%= render partial: "layouts/errors", locals: { object: @diagnosis } %>

      <%= f.label :condition %>
      <%= f.text_field :condition, class: 'form-control' %>

      <%= f.label :prescription %>
      <%= f.text_field :prescription, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
